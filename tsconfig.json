{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "allowJs": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./",
      "paths": {
        "@config/*": ["src/config/*"],
        "@modules/*": ["src/modules/*"],
        "@shared/*": ["src/shared/*"],
      },
      "typeRoots": ["@types", "./node_modules/@types"],
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}
